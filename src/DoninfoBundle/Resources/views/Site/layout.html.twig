<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">

        <title>{% block title %}Doninfo{% endblock %}</title>

        {% block stylesheets %}
            <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
            <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
            <link rel="stylesheet" href="//ajax.googleapis.com/ajax/libs/jqueryui/1.12.1/themes/smoothness/jquery-ui.css">
            <link rel="stylesheet" href="{{ asset('bundles/doninfobundle/css/jquery-jvectormap-2.0.3.css') }}" />
            <link rel="stylesheet" href="{{ asset('bundles/doninfobundle/css/style-layout.css') }}" />
            <link rel="stylesheet" href="{{ asset('bundles/doninfobundle/css/style-accueil.css') }}" />
            <link rel="stylesheet" href="{{ asset('bundles/doninfobundle/css/style-form.css') }}" />
            <link rel="stylesheet" href="{{ asset('bundles/doninfobundle/css/style-index.css') }}" />
            <link rel="stylesheet" href="{{ asset('bundles/doninfobundle/css/style-infos.css') }}" />
            <link rel="stylesheet" href="{{ asset('bundles/doninfobundle/css/style-membre.css') }}" />
            <link rel="stylesheet" href="{{ asset('bundles/doninfobundle/css/style-annonce.css') }}" />
                    
        {% endblock %}
    </head>
    
    <body>
        <div class="bloc_page container">
            <header class="row">  
               <nav class="navbar bloc_header" role="navigation">
	                <div class="navbar-header">
		                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
			                <span class="sr-only">Toggle navigation</span>
			                <span class="icon-bar"></span>
			                <span class="icon-bar"></span>
			                <span class="icon-bar"></span>
		                </button>
		                <a href="{{ path('doninfo_acceuil') }}" class="navbar-brand">
                            <img src="{{ asset('bundles/doninfobundle/images/logo2.png') }}" alt="logo" class="logo"/>
                        </a>
	                </div>
	                
	                <div class="collapse navbar-collapse navbar-ex1-collapse">
		                <ul class="nav navbar-nav">
                            {% if is_granted('ROLE_USER') %}
                                <li><a href="{{ path('doninfo_index_besoins') }}" class="liens lien1">Besoins</a></li>
                                <li><a href="{{ path('doninfo_index_donations') }}" class="liens lien2">Donations</a></li>
                                <li><a href="{{ path('doninfo_post') }}" class="liens lien3">Poster</a></li>
                            {% endif %}
		                </ul>
		                <ul class="nav navbar-nav navbar-right">
			                <li><a href="#" class="liens">Contact membre</a></li>
			                <li class="dropdown">
				                <a href="#" class="dropdown-toggle liens" data-toggle="dropdown">
				                    <span class="glyphicon glyphicon-user"></span> Compte</b>
				                </a>
				                <ul class="dropdown-menu">
                                    {% if not is_granted('ROLE_USER') %}
                                        <li><a href="{{ path('doninfo_inscription') }}" class="liens">Inscription</a></li>
                                        <li><a href="{{ path('doninfo_connexion') }}" class="liens">Connexion</a></li>
                                    {% endif %}
                                    {% if is_granted('ROLE_USER') %}
                                        <li>
                                            <a href="{{ path('doninfo_membre', { 'id': app.user.id }) }}" class="liens">Espace membre</a>
                                        </li>
                                        <li>
                                            <a href="{{ path('doninfo_logout')}}" class="liens">Déconnexion</a>
                                        </li>
                                    {% endif %}
				                </ul>
			                </li>
		                </ul>
	                </div><!-- /.navbar-collapse -->
                </nav>     
            </header>
            
            <section class="row">
                {% block contenu %}
                {% endblock %}
                {% block erreur %}
                {% endblock %}
            </section>  
            
            <footer class="row">
                <div class="bloc_footer">
                    <a href="{{ path('doninfo_contact_public') }}" class="liens liens-footer">Contact</a>
                    <a href="{{ path('doninfo_mentions') }}" class="liens liens-footer">Mentions légales</a>
                    <p class="liens">Doninfo © {{ 'now'|date('Y') }}</p> 
                </div>
            </footer>
            
        </div>
             
        {% block javascripts %}
            <script src="//ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
            <script src="//ajax.googleapis.com/ajax/libs/jqueryui/1.12.1/jquery-ui.min.js"></script>
            <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
            <script src="{{ asset('bundles/doninfobundle/js/jquery-jvectormap-2.0.3.min.js') }}"></script>
            <script src="{{ asset('bundles/doninfobundle/js/jquery-jvectormap-fr-mill.js') }}"></script>
            <script src="{{ asset('bundles/doninfobundle/js/script-layout.js') }}"></script>
        {% endblock %}
    
    </body>
</html>
