{# src/DoninfoBundle/Resources/views/Site/listannonce.html.twig #}
    
    <div class="bloc-list">
        <div class="list-annonce">
            {% if paginationOff.getTotalItemCount == 0 %}
                Aucune annonce trouv√©e...
            {% endif %}
            {% for annonce in paginationOff %}
            <div class="list-bloc list-bloc-off row">
                <div class="titre-annonce-off col-sm-5 col-xs-12">
                    <a href="{{ path('doninfo_annonce', { 'id': annonce.id }) }}">
                        {{ annonce.titre|truncate(35, true) }}
                    </a>
                </div>
                <div class="date-annonce-off col-sm-2 col-xs-12">
                    {{ annonce.datecreation|date("d/m/Y") }}
                </div>  

                <div class="desc-annonce-off col-sm-5 col-xs-12">            
                    {{ annonce.description|truncate(35, true) }}
                </div>
                
            </div>
            {% endfor %}
        </div>
    </div> 
    
    <div class="bloc-list bloc-pagi">
        <div class="navigation">
            {{ knp_pagination_render(paginationOff) }}
        </div>
    </div>
